<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_background">

    <include layout="@layout/activity_base"/>


    <EditText
        android:id="@+id/edit_real_name"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:hint="输入真实姓名"
        android:textColor="@color/text_main_color"
        android:textSize="16dp"
        android:paddingLeft="20dp"
        android:background="@drawable/shape_background_enter"/>

    <EditText
        android:id="@+id/edit_real_phone"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:hint="输入有效手机号"
        android:textColor="@color/text_main_color"
        android:textSize="16dp"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:background="@drawable/shape_background_enter"/>

    <EditText
        android:id="@+id/edit_real_id_cart"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:hint="输入身份证号"
        android:textColor="@color/text_main_color"
        android:textSize="16dp"
        android:paddingLeft="20dp"
        android:background="@drawable/shape_background_enter"/>

    <TextView
        android:id="@+id/tv_enter_for_sure"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="报名参加"
        android:textColor="@color/app_main_default"
        android:textSize="19dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="190dp"
        android:background="@drawable/shape_translucent_background"/>
</LinearLayout>