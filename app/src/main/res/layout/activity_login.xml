<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_default">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/activity_base"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorAccent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_code_login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="验证码登录"
                        android:gravity="center"
                        android:textColor="@color/text_green"
                        android:textSize="17dp"
                        android:visibility="visible" />
                    <ImageView
                        android:id="@+id/iv_code_select"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:src="@drawable/indicator_login"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_password_login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="密码登录"
                        android:gravity="center"
                        android:textColor="@color/app_main_default"
                        android:textSize="17dp"
                        android:visibility="visible" />
                    <ImageView
                        android:id="@+id/iv_password_select"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:src="@drawable/indicator_login"
                        android:visibility="invisible"/>
                </LinearLayout>

               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_third_login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="第三方登录"
                        android:gravity="center"
                        android:textColor="@color/app_main_default"
                        android:textSize="17dp"
                        android:visibility="visible" />
                    <ImageView
                        android:id="@+id/iv_third_select"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:src="@drawable/indicator_login"
                        android:visibility="invisible"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        <com.ifree.uu.uubuy.custom.LazyViewPager
            android:id="@+id/vPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85"
            android:flipInterval="30"
            android:paddingTop="40dp"
            android:persistentDrawingCache="animation" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <CheckBox
            android:id="@+id/ck_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:button="@drawable/selected_box_style"
            android:checked="true"
            android:scaleX="0.8"
            android:scaleY="0.8" />

        <TextView
            android:id="@+id/text_register_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已阅读并同意《UU购登录协议》"
            android:textColor="@color/text_green"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>