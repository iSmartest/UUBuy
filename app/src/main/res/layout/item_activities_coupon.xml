<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/app_main_default">

    <LinearLayout
        android:layout_width="108dp"
        android:layout_height="121dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/shape_background_coupon">
        <TextView
            android:id="@+id/tv_coupon_reduce_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_main_default"
            android:textSize="30dp"
            android:text="22"/>
        <TextView
            android:id="@+id/tv_coupon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_main_default"
            android:textSize="15dp"
            android:text="优惠券"/>
        <TextView
            android:id="@+id/tv_coupon_all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_main_default"
            android:textSize="13dp"
            android:text="满199可用"/>
    </LinearLayout>
    <TextView
        android:id="@+id/iv_get"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_background_coupon_sure"
        android:layout_marginTop="2dp"
        android:text="点击使用"
        android:textSize="14dp"
        android:textColor="@color/app_main_default"
        android:gravity="center"/>

</LinearLayout>