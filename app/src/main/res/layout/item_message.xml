<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_message_send_time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="昨天10：00"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_subtitle_color"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_main_default"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="五彩城活动大放送即将开始 "
            android:textColor="@color/text_subtitle_color"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2018-07-23"
            android:textColor="@color/text_subtitle_color"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_message_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="活动结束"
            android:visibility="visible"
            android:textColor="@color/text_main_color"
            android:textSize="13dp" />
    </LinearLayout>
</LinearLayout>