<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_mine_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/app_main_default"
        android:padding="10dp"
        android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/iv_mine_store_picture"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:src="@drawable/timg"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="18dp">
            <TextView
                android:id="@+id/tv_mine_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="科曼多"
                android:textColor="@color/text_main_color"
                android:textSize="13dp"
                />
            <TextView
                android:id="@+id/tv_mine_store_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="奥特莱斯B3 BF34店"
                android:textColor="@color/text_main_color"
                android:textSize="11dp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mine_market"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/app_main_default"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_mine_market_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奥特莱斯上地店"
                android:gravity="center_vertical"
                android:textColor="@color/text_main_color"
                android:textSize="17dp"
                android:layout_weight="1"
                android:paddingLeft="14dp"/>

            <TextView
                android:id="@+id/tv_mine_market_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textSize="12dp"
                android:visibility="gone"
                android:textColor="@color/text_green"
                android:drawableTop="@drawable/share"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_mine_market_picture"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:src="@drawable/timg"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_mine_market_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="活动时间2018-08-01——2018-08-03"
            android:textColor="@color/text_main_color"
            android:textSize="11dp"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"/>

    </LinearLayout>

</LinearLayout>