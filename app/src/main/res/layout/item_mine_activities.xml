<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_mine_market"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/app_main_default"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_mine_market_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/text_main_color"
                android:textSize="17dp"
                android:paddingLeft="14dp"/>

            <TextView
                android:id="@+id/tv_mine_market_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/text_main_color"
                android:textSize="11dp"
                android:gravity="center|left"
                android:layout_weight="1"
                android:drawableLeft="@drawable/dot"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_mine_market_picture"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:src="@drawable/loading_error"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_mine_market_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/text_main_color"
            android:textSize="11dp"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"/>

    </LinearLayout>

</LinearLayout>