<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_coupon_background"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        <LinearLayout
            android:id="@+id/ll_item_coupon_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/coupon_uu"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_coupon_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textColor="@color/app_main_default"
                android:textSize="17dp"/>
            <TextView
                android:id="@+id/tv_coupon_reduce_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textColor="@color/app_main_default"
                android:textSize="35dp"/>
            <TextView
                android:id="@+id/tv_my_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击领取"
                android:textColor="@color/app_main_default"
                android:textSize="17dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_coupon_all_price"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="单笔满600可用"
                android:textColor="@color/title_color"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:text=""
                android:textColor="@color/text_main_color"
                android:textSize="13dp"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/tv_coupon_time"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:text="有效时间2018.08.03—2.18.08.12"
                android:textColor="@color/text_main_color"
                android:textSize="12dp"
                android:layout_marginTop="2dp"/>
            <TextView
                android:id="@+id/tv_coupon_for_store"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:text="奥特莱斯上地店"
                android:textColor="#ffff9145"
                android:textSize="13dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>