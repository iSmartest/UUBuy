<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_background">
    <RelativeLayout
        android:id="@+id/rl_search_market"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/image_item_conner_style"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/iv_search_market_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/timg" />

            <TextView
                android:id="@+id/tv_search_market_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="物美超市"
                android:textColor="@color/app_main_default"
                android:textSize="19dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorBanTransparent"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:id="@+id/tv_search_market_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="活动时间：2018-07-22"
                    android:textColor="@color/app_main_default"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_search_market_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="活动地点：北京市上地万达商城"
                    android:textColor="@color/app_main_default"
                    android:textSize="13dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_search_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/app_main_default"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_search_store_picture"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:src="@drawable/timg"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="18dp">
            <TextView
                android:id="@+id/tv_search_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="科曼多"
                android:textColor="@color/text_main_color"
                android:textSize="13dp"
                />
            <TextView
                android:id="@+id/tv_search_store_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="奥特莱斯B3 BF34店"
                android:textColor="@color/text_main_color"
                android:textSize="11dp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_search_commodity"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/app_main_default">

        <ImageView
            android:id="@+id/iv_search_commodity_picture"
            android:layout_width="136dp"
            android:layout_height="88dp"
            android:src="@drawable/timg"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_search_commodity_picture">
            <TextView
                android:id="@+id/tv_search_commodity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特步男鞋运动鞋男款"
                android:textColor="@color/text_main_color"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_search_commodity_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥179.00"
                android:textColor="@color/text_price_color"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_search_commodity_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥319.00"
                android:textColor="@color/text_main_color"
                android:textSize="10sp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动件数"
                    android:textColor="#ff000000"
                    android:textSize="10sp"
                    />
                <TextView
                    android:id="@+id/tv_search_commodity_surplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45%"
                    android:textColor="@color/text_price_color"
                    android:textSize="10sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_now_reserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即预订"
            android:textColor="@color/text_green"
            android:textSize="11dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_background_frame"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:paddingRight="10dp"/>
    </RelativeLayout>

</LinearLayout>